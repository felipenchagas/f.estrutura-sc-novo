# Início do arquivo .htaccess

# Liga o mecanismo de reescrita
RewriteEngine On

# 1. Redirecionamento de www para non-www
RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
RewriteRule ^(.*)$ https://%1/$1 [R=301,L]

# 2. Remover .html das URLs
# Redireciona de .html para URLs amigáveis (sem .html)
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.html -f
RewriteRule ^(.*)$ $1.html [L]

# 3. Redirecionar URLs com .html para sem .html (ex: /pagina.html para /pagina)
RewriteCond %{THE_REQUEST} \s/+(.+?)\.html[\s?] [NC]
RewriteRule ^ %1 [R=301,L]

# Fim do arquivo .htaccess